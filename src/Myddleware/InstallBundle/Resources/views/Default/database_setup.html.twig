{% extends '::baseone.html.twig' %}
{% block title %} {{ 'install.title' | trans }} {% endblock %}
{% block css %}
    <link rel="stylesheet" href="{{ asset('css/install/install.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/regle/css/layout.css') }}" type="text/css" />
{% endblock css %}
{% block body %}
<div id="myd_top"></div>
<div id="logo"></div>
<div class="container">
    <section>
        <div id="myd_title">
            <p>{{ 'install.title' | trans }}</p>
        </div>
        <article class="panel panel-success">
            <div class="panel-heading">
                <h1 class="panel-title">{{ 'install.database_setup' | trans }}</h1>
            </div>
            <div class="panel-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
            {% if connection_failed_message %}
                <p class="bg-danger">{{ connection_failed_message }}</p>
            {% else %}
               <p class="bg-success">{{ connection_success_message }}</p>
            {% endif %}
            <p class="bg-info">{{ fixtures_error_message }}</p>
            </div> 
           <button class="btn btn-success btn-lg next" onClick="window.location.reload()">{{ 'install.next' | trans }}</button>
        </article>
           
    </section>
</div>
    <footer>
        <p>Â© Myddleware 2014 - {{ 'now' | date('Y') }}</p>
        <p>version {{ myd_version }}</p>
    </footer>
{% endblock %}